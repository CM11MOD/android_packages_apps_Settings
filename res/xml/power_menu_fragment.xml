<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceScreen
        android:fragment="com.android.settings.slim.PowerMenuStyle"
        android:key="power_menu_style"
        android:title="@string/style_title"
        android:summary="@string/power_menu_style_summary" />

    <PreferenceCategory
            android:key="expanded_desktop_category"
            android:title="@string/power_menu_expanded_desktop" >

            <ListPreference
                android:key="expanded_desktop"
                android:title="@string/expanded_desktop_style"
                android:entries="@array/expanded_desktop_style_entries"
                android:entryValues="@array/expanded_desktop_style_values"
                android:persistent="false" />

            <CheckBoxPreference
                android:key="expanded_desktop_no_navbar"
                android:title="@string/power_menu_expanded_desktop"
                android:persistent="true" />

            <com.android.settings.cyanogenmod.SystemSettingCheckBoxPreference
                android:key="expanded_desktop_system_bars_visibility"
                android:title="@string/expanded_desktop_system_bars_visibility"
                android:summary="@string/expanded_desktop_system_bars_visibility_summary"
                android:defaultValue="false" />

            <com.android.settings.cyanogenmod.SystemSettingCheckBoxPreference
                android:key="disable_immersive_message"
                android:title="@string/disable_immersive_message_title"
                android:summary="@string/disable_immersive_message_summary"
                android:defaultValue="false" />

    </PreferenceCategory>

</PreferenceScreen>
