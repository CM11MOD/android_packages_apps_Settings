<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.android.settings.cyanogenmod.ButtonBacklightBrightness
        android:key="button_backlight"
        android:title="@string/button_backlight_title"
        android:dialogTitle="@string/button_backlight_title"
        android:persistent="false" />

    <!-- Device Specific Bluetooth Input settings -->
    <Preference
        android:key="bluetooth_input_settings">
        <intent
            android:action="com.cyanogenmod.action.LAUNCH_BLUETOOTH_INPUT_SETTINGS"
            android:targetPackage="com.cyanogenmod.settings.device"
            android:targetClass="com.cyanogenmod.settings.device.BluetoothInputSettings" />
    </Preference>

        <PreferenceCategory
                android:key="keys_cat"
                android:title="@string/keys_bindings_title" >

            <CheckBoxPreference
                android:key="enable_hardware_rebind"
                android:title="@string/keys_enable_custom_title"
                android:summary="@string/keys_enable_custom_summary" />

        </PreferenceCategory>

        <PreferenceCategory
            android:key="button_keys_back"
            android:title="@string/keys_back_press_title" >

            <Preference
                android:key="keys_back_press"
                android:title="@string/keys_action_normal"
                android:dependency="enable_hardware_rebind" />

            <Preference
                android:key="keys_back_long_press"
                android:title="@string/keys_action_long"
                android:dependency="enable_hardware_rebind" />

            <Preference
                android:key="keys_back_double_tap"
                android:title="@string/keys_action_double"
                android:dependency="enable_hardware_rebind" />
        </PreferenceCategory>

        <PreferenceCategory
            android:key="button_keys_home"
            android:title="@string/keys_home_press_title">

            <Preference
                android:key="keys_home_press"
                android:title="@string/keys_action_normal"
                android:dependency="enable_hardware_rebind" />

            <Preference
                android:key="keys_home_long_press"
                android:title="@string/keys_action_long"
                android:dependency="enable_hardware_rebind" />

            <Preference
                android:key="keys_home_double_tap"
                android:title="@string/keys_action_double"
                android:dependency="enable_hardware_rebind" />
        </PreferenceCategory>

        <PreferenceCategory
            android:key="button_keys_menu"
            android:title="@string/keys_menu_press_title">

            <Preference
                android:key="keys_menu_press"
                android:title="@string/keys_action_normal"
                android:dependency="enable_hardware_rebind" />

            <Preference
                android:key="keys_menu_long_press"
                android:title="@string/keys_action_long"
                android:dependency="enable_hardware_rebind" />

            <Preference
                android:key="keys_menu_double_tap"
                android:title="@string/keys_action_double"
                android:dependency="enable_hardware_rebind" />
        </PreferenceCategory>

        <PreferenceCategory
            android:key="button_keys_assist"
            android:title="@string/keys_assist_press_title">

            <Preference
                android:key="keys_assist_press"
                android:title="@string/keys_action_normal"
                android:dependency="enable_hardware_rebind" />

            <Preference
                android:key="keys_assist_long_press"
                android:title="@string/keys_action_long"
                android:dependency="enable_hardware_rebind" />

            <Preference
                android:key="keys_assist_double_tap"
                android:title="@string/keys_action_double"
                android:dependency="enable_hardware_rebind" />
        </PreferenceCategory>

        <PreferenceCategory
            android:key="button_keys_appSwitch"
            android:title="@string/keys_app_switch_press_title">

            <Preference
                android:key="keys_app_switch_press"
                android:title="@string/keys_action_normal"
                android:dependency="enable_hardware_rebind" />

            <Preference
                android:key="keys_app_switch_long_press"
                android:title="@string/keys_action_long"
                android:dependency="enable_hardware_rebind" />

            <Preference
                android:key="keys_app_switch_double_tap"
                android:title="@string/keys_action_double"
                android:dependency="enable_hardware_rebind" />
        </PreferenceCategory>

    <PreferenceCategory
        android:key="power_key"
        android:title="@string/hardware_keys_power_key_title" >

        <CheckBoxPreference
            android:key="power_end_call"
            android:title="@string/power_end_call_title"
            android:summary="@string/power_end_call_summary"
            android:persistent="false"/>

        <com.android.settings.cyanogenmod.SystemSettingCheckBoxPreference
            android:key="enable_fast_torch"
            android:title="@string/fast_torch_title"
            android:summary="@string/fast_torch_summary"
            android:defaultValue="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="volume_keys"
        android:title="@string/hardware_keys_volume_keys_title" >

        <com.android.settings.cyanogenmod.SystemSettingCheckBoxPreference
            android:key="volume_wake_screen"
            android:title="@string/volume_wake_title"
            android:summary="@string/volume_wake_summary"
            android:defaultValue="false" />

        <com.android.settings.cyanogenmod.SystemSettingCheckBoxPreference
            android:key="volbtn_music_controls"
            android:title="@string/volbtn_music_controls_title"
            android:summary="@string/volbtn_music_controls_summary"
            android:defaultValue="true" />

        <CheckBoxPreference
            android:key="swap_volume_buttons"
            android:title="@string/swap_volume_buttons_title"
            android:summary="@string/swap_volume_buttons_summary" />
    </PreferenceCategory>

</PreferenceScreen>
