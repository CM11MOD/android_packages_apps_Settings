<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/notifications_settings_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <PreferenceCategory
        android:key="lockscreen_notifications"
        android:title="@string/lockscreen_notifications_settings" />

        <PreferenceScreen
            android:key="active_notifications"
            android:icon="@drawable/ic_settings_lockscreen"
            android:title="@string/lockscreen_notifications_settings"
            android:fragment="com.android.settings.ActiveNotifications" />

    <PreferenceCategory
        android:title="@string/notifications_settings_title"
        android:key="notifications"/>

    <!-- HALO -->
    <PreferenceScreen
        android:key="halo_settings"
        android:icon="@drawable/ic_settings_halo" 
        android:fragment="com.android.settings.pa.Halo"
        android:title="@string/halo_settings_title" />

    <!-- HOVER -->
    <PreferenceScreen
        android:key="hover_settings"
        android:icon="@drawable/ic_settings_hover"
        android:fragment="com.android.settings.pa.Hover"
        android:title="@string/hover_enabled_title" />

    <!-- HEADSUP -->
    <PreferenceScreen
        android:key="heads_up_enabled"
        android:icon="@drawable/ic_settings_headsup"
        android:fragment="com.android.settings.headsup.HeadsUpSettings"
        android:title="@string/category_heads_up"/>

    <PreferenceCategory
        android:title="@string/block_notifications_title"
        android:key="notifications"/>

    <PreferenceScreen
        android:id="@+id/spamlist"
        android:icon="@drawable/ic_settings_spamlist"
        android:title="@string/block_notifications_title"
        android:fragment="com.android.settings.cyanogenmod.SpamList" />
</PreferenceScreen>
